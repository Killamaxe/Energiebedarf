<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbartemperature"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RadioGroup
        android:id="@+id/radiogroupetemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp">

        <RadioButton
            android:id="@+id/firsttemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="normal"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/secondtemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp. 37 - 38 째C"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/thirdtemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp. bis 39 째C"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/fourthtemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp. bis 40 째C"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/fifthtemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp. bis 41 째C"
            android:textSize="15dp" />
    </RadioGroup>

    <Button
        android:id="@+id/savetemperature"
        android:layout_width="413dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:gravity="center|bottom"
        android:onClick="onClickTemperature"
        android:text="Speichern"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        tools:visibility="invisible" />

</RelativeLayout>
